@{
    var request = HttpContext.Current.Request;
    var urlBase = string.Format("{0}://{1}{2}", request.Url.Scheme, request.Url.Authority, Url.Content("~"));
}<!DOCTYPE html>
<html ng-app="App">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/modernizr")
    <base href="@urlBase" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/" class="navbar-brand">Home</a>
                <a href="~/app/Upload" class="navbar-brand">Upload</a>
                <a href="~/app/Email" class="navbar-brand">Send Emails</a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed by <a href="http://adilson.almeidapedro.com.br">Adilson de Almeida Pedro</a></p>
        </footer>
    </div>
    <script>
        var baseUrl = "@urlBase";
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/assets")
    @Scripts.Render("~/bundles/App")
    @Scripts.Render("~/bundles/Directives")
    @Scripts.Render("~/bundles/Services")
    @Scripts.Render("~/bundles/Controllers")
    @RenderSection("scripts", required: false)
</body>
</html>
